.Popup{
  position: absolute;
  width: 434rpx;
  height: 252rpx;
  padding-top: 20rpx;
  top:-260rpx;
  left:-85rpx;
  box-sizing: border-box;
  background-image: url(../img/Popup@3x.png);
  z-index: 9999;
  background-size: cover;
}
.Popup view{
  height: auto;
  padding-left: 20rpx;
  overflow:hidden;
}
.Popup view:nth-of-type(1) .logo{
  width: 80rpx;
  height: 80rpx;
  float: left;
  margin-right: 20rpx;
}
.Popup view:nth-of-type(1) text{
  font-size: 18px;
  text-overflow:ellipsis; 
  white-space:nowrap; 
  overflow:hidden;
  width: 210rpx;
  display: inline-block;
  color: #FBCC2E;
  line-height: 80rpx;
}
.Popup .info{
  height: auto;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}
.Popup .info image{
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-right: 12rpx;
}
.Popup .info text{
  font-size: 24rpx;
  line-height: 40rpx;
  display:inline-block;
  float: left;
}
.Popup .info .prices{
  color: #555555;
}
.Popup .info .map{
  color: #47BFF7;
}
.Popup .info text:nth-of-type(2){
  font-size: 20rpx;
  color: #000000;
  line-height: 40rpx;
}
.Popup .num{
  position: absolute;
  top: 0;
  right: 10rpx;
  width: 75rpx;
  height: 204rpx;
}
